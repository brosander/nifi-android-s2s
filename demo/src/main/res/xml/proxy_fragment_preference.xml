<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Proxy Host"
        android:key="proxy_host_preference"
        android:summary="The proxy host to connect through" />
    <EditTextPreference
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Proxy Port"
        android:key="proxy_port_preference"
        android:summary="The proxy port" />
    <EditTextPreference
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Proxy Username"
        android:key="proxy_username_preference"
        android:summary="The proxy username" />
    <EditTextPreference
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Proxy Password"
        android:key="proxy_password_preference"
        android:summary="The proxy password" />

</PreferenceScreen>